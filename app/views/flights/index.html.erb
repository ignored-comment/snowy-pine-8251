<h1>All Flights</h1>

<h3>Flight Information</h3>
<% @flights.each do |flight| %>
  <%= flight.number %> - <%= flight.airline.name %><br>
    <% flight.passengers.each do |passenger| %>
      <%= passenger.name %><%= button_to  "Remove Passenger", remove_this_passenger_path, method: :delete %><br>
    <% end %><br>
<% end %>
